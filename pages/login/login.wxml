<view class="container">
  <!-- logo -->
  <view>
    <text class="login-title">AIB增城校区主网管</text>
    <image class="login-logo" src="../../images/login.png"></image>
  </view>
  <!-- 输入框 -->
  <view>
    <input class="input" type="number" maxlength="11" bindblur="userID" bindconfirm="userID" bindinput="userID" placeholder="帐号"></input>
    <input class="input" type="text" password="true" placeholder="密码" bindblur="userPass" bindconfirm="userPass" bindinput="userPass"></input>
  </view>
  <!-- 登录 -->
  <view class="btns">
    <button class="btn-login" bindtap="checkUser">登录</button>
  </view>
</view>