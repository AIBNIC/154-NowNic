/* main */
.main{
  width: 630rpx;
  background-color: #fff;
  box-shadow: 0px 2px 10px rgba(0,0,0,.5);
  margin: 0rpx auto;
  margin-bottom: 40rpx;
  overflow: hidden;
  padding: 0 20rpx;
}
.main_a{
  width: 600rpx;
  box-sizing: border-box;
  margin: 0 auto;
  overflow: hidden;
}
text.line{
  font-size: 16px;
  text-align: left;
  margin: 15px 0;
}
.dxnumber{
  width: 100%;
  height: 80rpx;
  /* border: 1px solid #222; */
  /* border-radius: 8px; */
  padding: 5px 8px;
  margin: 0 auto;
  font-size: 15px;
  background-color: #f2f2f2;
}
.placeholder{
  color: rgb(160, 160, 160);
}

.btn{
  margin: 20px 0;
  border-radius: 35px;
  border: none;
  color: #fff;
  background-color: #161616;
  box-shadow: 0px 2px 10px rgba(0,0,0,.5);
  outline: none;
}
#btn1{
  margin-top: 20px;
}
.btn1_hover{
  color: #fff;
  background-color: rgb(51, 51, 51);
  outline: none;
}
.btn.btn_hover{
  background-color: rgb(51, 51, 51);
  outline: none;
}
.main_b{
  width: 670rpx;
  padding: 5% 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0px 2px 10px rgba(0,0,0,.5);
  margin: 0 auto;
  margin-bottom: 30rpx;
