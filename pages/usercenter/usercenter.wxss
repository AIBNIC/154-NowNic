/* pages/usercenter/usercenter.wxss */
page {
  font-size: 38rpx;
  font-family: "Microsoft YaHei";
  background: #eee;
}

.clearfix:after {
  display: block;
  content: "";
  clear: both;
  width: 0;
  height: 0;
  overflow: hidden;
}

.content {
  /* padding: 10px 0; */
}

.head {
  height: 310rpx;
}
.head-image{
  display: block;
  width:100%;
  height: 310rpx;
  padding:0;
  position: absolute;
  top: 0;
  z-index: -99;
}

.head-logo {
  float: left;
  display: inline-block;
  margin-left: 70rpx;
  margin-top: 50rpx;
  width: 170rpx;
  height: 170rpx;
  border-radius: 100%;
  overflow: hidden;
  z-index: 99;
}
.head-text{
  font-size: 12px;
  color: rgba(255, 255, 255, .7);
  /* color: #fff;0 */
  /* text-align: center; */
  margin-top: 30rpx;
  display: block;
  font-family: "Microsoft YaHei";
}
.head-right view{
  margin-bottom: 20rpx;
}

.info{
  width: 200px;
  display: block;
  margin: 80rpx 0 0 50rpx;
  float: left;
 
}
.info_text{
  color: #fff;
}
.btns {
  margin-top: 20rpx;
  display: block;
}

.btn,.btn1 {
  color: #222;
  text-align: left;
  text-indent: 40rpx;
  background: #fff;
  border-radius: 0;
  line-height: 50px;
  font-size: 15px;
  /* float: left; */
}

.btn:after,.btn1:after {
  display: none;
}
.btns-img{
  width: 30px;
  height: 30px;
  /* position: absolute; */
  float: left;
  margin: 10px 0;
}
.btn1{
  font-size: 20px;
}