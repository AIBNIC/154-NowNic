<view class="container" >
  <view class="user-item">
    <view class="info-item">
      <text>学号</text><text>{{student}}</text>
    </view>
    <view class="info-item">
      <text>姓名</text><text>{{name}}</text>
    </view>
    <view class="info-item" wx:if="{{user.mac}}">
      <text>MAC</text><text>{{user.mac}}</text>
    </view>
    <view class="info-item" wx:if="{{user.ip}}">
      <text>IP</text><text>{{user.ip}}</text>
    </view>
    <view class="info-item">
      <text>状态</text>
      <text wx:if="{{user.status}}">在线</text>
      <text wx:else>不在线</text>
    </view>
  </view>
  <view class="btns" wx:if="{{!tip || newuser}}">
    <i-button bind:click="handleClick" type="primary" size="small" class='btns_btn' data-student="{{student}}" data-fault="{{fault_id}}" bindtap="getFault" wx:if="{{!tip}}">接单</i-button>
    <i-button bind:click="handleClick" type="error" size="small" class='btns_btn' data-student="{{student}}" data-fault="{{fault_id}}" bindtap="successFault" wx:if="{{!checksuccess && newuser}}">完成</i-button>
    
    <!-- <button data-student="{{user.student}}" data-fault="{{fault_id}}" bindtap="getFault">接单</button>
    <button data-student="{{user.student}}" data-fault="{{fault_id}}" bindtap="getFault">完成</button> -->
    <!-- <button data-student="{{user.student}}" class="btn-clear" bindtap="clearUserInfo">清除在线与绑定</button> -->
  </view> 
</view>
 <view class="container" wx:if="{{userNoExist}}">
  <view class="user-no">
    <text>用户未开通锐捷</text>
  </view>
</view> 
<i-spin fix wx:if="{{loading}}"></i-spin>
<view wx:if="{{tip && !newuser}}" style='text-align:center;margin:40rpx 0 ;font-size:50rpx;'>
  <text>此单已被人抢了，晚了一步~</text>
</view>
<!-- <view wx:if="{{checksuccess}}" style='text-align:center;margin:40rpx 0 ;font-size:50rpx;'>
  <text>此单已完成辛苦了</text>
</view> -->

<view wx:for="{{images}}" class='pic'>
  <image src='{{item}}' bindtap='handleImagePreview'></image>
</view>