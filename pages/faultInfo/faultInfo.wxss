/* pages/faultInfo/faultInfo.wxss */
.container {
  padding: 0;
  font-size: 38rpx;
  font-family: "微软雅黑";
}
.user-item {
  margin-top: 20px;
  width:90%;

}

.user-no {
  margin-top: 100px;
  font-size: 16px;
}

.info-item {
  position: relative;
  display: block;
  /* height: 20px; */
  /* padding: 10rpx; */
  border: 1px solid #bbb;
  border-bottom: none;
}

.info-item label{
  min-width: 21%;
  padding: 10rpx;
  /* border: 1px solid red; */
  display:inline-block;
  text-align: center;
}

.info-item:last-child {
  border: 1px solid #bbb;
}

.info-item text {
   display: inline-block;
   height: 100%;
}

.info-item text:nth-child(1) {
  position: absolute;
  top: 0;
  left: 0;
  width: 26%;
  border-right: 1px solid #bbb;
  text-align: center;
  line-height:65rpx;
}

.info-item text:nth-child(2) {
  width: 73%;
  /* border: 1px solid #bbb; */
  display: inline-block;
  /* padding-left: 100rpx; */
  text-align: center;
}

.btns {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}
.btns_btn{
  display: block;
  float: left;
  /* width: 100rpx; */
}
.btn-clear {
  font-size: 16px;
  color: #fff;
  border-radius: 4px;
  border: none;
  background: #11A7ED;
}
.pic image{
  margin: 10px auto;
  display: block;
  /* width: 80vw;
  height: 80vw; */
}